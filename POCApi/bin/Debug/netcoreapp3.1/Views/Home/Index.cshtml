@model IEnumerable<POCWeb.Models.WeatherForecast>

@{
    var BaseUrl = @Model.FirstOrDefault().BaseUrl;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="@BaseUrl/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@BaseUrl/lib/vue/css/bootstrap-vue.min.css" />
</head>
<body>
    <header>
        <div class="container">
            <img src="@BaseUrl/img/logo.png" class="img-thumbnail">
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TemperatureC)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Summary)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TemperatureC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Summary)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </main>
    </div>
    <div class="container">
        <qrcode value="Hello, World!" :options="{ width: 200 }"></qrcode>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - POCWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="@BaseUrl/lib/vue/js/vue.js"></script>
    <script src="@BaseUrl/lib/vue/js/bootstrap-vue.min.js"></script>
    <script src="@BaseUrl/lib/vue/js/vee-validate.full.min.js"></script>
    <script src="@BaseUrl/lib/vue/js/axios.min.js"></script>
    <script src="@BaseUrl/lib/vue/js/vue-qrcode/vue-qrcode.js"></script>
    <script src="@BaseUrl/js/app.js"></script>

</body>
</html>
